<UserControl x:Class="CCUI_UI.CamItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CCUI_UI"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="200">
    <Grid Margin="2">
        <Viewbox>
            <Border Background="#272727" CornerRadius="5" BorderBrush="Orange" BorderThickness="2">
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2">
                        <TextBlock TextAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="20">CAM NAME</TextBlock>
                        <TextBlock TextAlignment="Center" Foreground="#a0a0a0">192.168.1.1</TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </Viewbox>
    </Grid>
</UserControl>
