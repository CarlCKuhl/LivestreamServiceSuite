        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presenter"
        mc:Ignorable="d"
        Title="Presenter" Height="450" Width="800">
    <Grid>
        <Button Content="Select Presentation Folder" HorizontalAlignment="Left" Margin="50,52,0,0" VerticalAlignment="Top" Click="Select_Presentation_Folder"/>
