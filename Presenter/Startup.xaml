<Window x:Class="Presenter.Startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presenter"
        mc:Ignorable="d"
        Title="Presenter Setup" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <Button Content="Select Presentation Folder" Click="Select_Presentation_Folder" MinHeight="50" Margin="10,10,10,10"/>
            <Label Name="FolderName" HorizontalAlignment="Center">Select Folder</Label>
            <Button Name="Start" IsEnabled="False" Content="Start Presentation" Click="Start_Presentation" MinHeight="50" Margin="10,10,10,10"/>
        </StackPanel>

    </Grid>
</Window>
