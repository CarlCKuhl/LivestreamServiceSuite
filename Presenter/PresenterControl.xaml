<Window x:Class="Presenter.PresenterControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presenter"
        mc:Ignorable="d"
        Topmost="True"
        Title="Presentation Controls" Height="280" Width="522">
    <Grid>
        <Button Content="Prev" HorizontalAlignment="Left" Margin="28,39,0,0" VerticalAlignment="Top" Height="64" Width="125" Click="Prev_Slide"/>
        <Button Content="Play" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="92,182,0,0" RenderTransformOrigin="0.86,-0.959" Height="52" Width="115" Click="Play_Media"/>
        <Button Content="Next" HorizontalAlignment="Left" Margin="367,44,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.133,0.835" Height="64" Width="125" Click="Next_Slide"/>
        <Button Content="Pause" HorizontalAlignment="Left" Margin="212,182,0,0" VerticalAlignment="Top" Height="52" Width="113" Click="Pause_Media"/>
        <Button Content="Restart" HorizontalAlignment="Left" Margin="330,182,0,0" VerticalAlignment="Top" Height="52" Width="113" Click="Replay_Media"/>

    </Grid>
</Window>
