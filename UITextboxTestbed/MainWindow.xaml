<Window x:Class="UITextboxTestbed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UITextboxTestbed" xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <avalonEdit:TextEditor Height="400" Name="textEditor" FontFamily="consolas" SyntaxHighlighting="XENON" FontSize="10pt"></avalonEdit:TextEditor>
            <Button Click="TestGetText">Extract Text</Button>
            <Button Click="TestInsert">Insert 'Hello'</Button>
            <TextBlock Name="tbtest"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
