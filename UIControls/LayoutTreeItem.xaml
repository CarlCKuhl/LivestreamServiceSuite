<UserControl x:Class="UIControls.LayoutTreeItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200">
    <Grid Height="40">
        <Border Background="LightGray" CornerRadius="10" Margin="2">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Foreground="Black" Name="tbDisplayName" VerticalAlignment="Center" Padding="10">Item</TextBlock>
                <Button Name="btn_edit" Click="Click_EditLayout" Width="30" Height="30" Background="Transparent" BorderBrush="LimeGreen" BorderThickness="2" Margin="0,0,10,0">
                    <Image Source="../ViewControls/Images/Artist.png"></Image>
                </Button>
                <Button Name="btn_delete" Click="Click_Delete" Width="30" Height="30" Background="Transparent" BorderBrush="Red" BorderThickness="2" Margin="0,0,10,0">
                    <Image Source="../ViewControls/Images/Trash.png"></Image>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
