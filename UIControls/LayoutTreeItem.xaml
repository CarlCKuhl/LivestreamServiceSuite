<UserControl x:Class="UIControls.LayoutTreeItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIControls"
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="100">
    <Grid Background="White">
        <StackPanel Orientation="Horizontal" Background="White">
            <TextBlock Foreground="Black" Name="tbDisplayName">Item</TextBlock>
            <Button Click="Click_EditLayout" Width="15" Height="15" Background="Transparent" BorderBrush="Transparent" Margin="20,0,0,0">
                <Image Source="../ViewControls/Images/Pencil.png"></Image>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
