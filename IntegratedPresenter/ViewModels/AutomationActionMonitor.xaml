<UserControl x:Class="Integrated_Presenter.ViewModels.AutomationActionMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Integrated_Presenter.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid>
        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TextBlock Foreground="White" Name="tbStatus">[Ready]</TextBlock>
            </Grid>
            <Grid Grid.Column="1">

            </Grid>
            <Grid Grid.Column="2">
                <TextBlock Foreground="white" Name="tbMessage">Some Action Message...</TextBlock>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
