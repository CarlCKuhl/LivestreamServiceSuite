<Window x:Class="IntegratedPresenter.Main.Connection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntegratedPresenter.Main"
        mc:Ignorable="d"
        Title="Connect" Height="120" Width="380" Background="{StaticResource darkBlackBrush}">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Name="lbIP" Margin="10,10,10,10" Foreground="#eaeaea">IP Address:</TextBlock>
                <TextBox Name="tbIP" Width="200" Margin="10,10,10,10" Style="{StaticResource darkTextbox}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Click="Cancel" Margin="10,10,10,10" Width="100" Height="30" Style="{StaticResource SelectorTextButton}">
                    CANCEL
                </Button>
                <Button Click="Connect" Margin="10,10,10,10" Width="100" Height="30" Style="{StaticResource SelectorTextButton}">
                    CONNECT
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
