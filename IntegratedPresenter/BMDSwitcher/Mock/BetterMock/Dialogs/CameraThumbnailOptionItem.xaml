<UserControl x:Class="Integrated_Presenter.BMDSwitcher.Mock.BetterMock.Dialogs.CameraThumbnailOptionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Integrated_Presenter.BMDSwitcher.Mock.BetterMock.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid MouseDown="Click">
        <Border Name="bdr" BorderThickness="3" BorderBrush="Transparent">
            <Viewbox Height="216" Width="384">
                <Image Name="img"></Image>
            </Viewbox>
        </Border>
    </Grid>
</UserControl>
