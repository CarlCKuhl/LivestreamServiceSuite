<Window x:Class="Integrated_Presenter.Windows.SparePanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Integrated_Presenter.Windows" xmlns:matrixcontrols="clr-namespace:Integrated_Presenter.ViewModels.MatrixControls"
        mc:Ignorable="d"
        PreviewKeyDown="Window_PreviewKeyDown"
        Title="Spare Panel" Height="800" Width="1270" Background="#070707">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid Background="#171717" Width="1250" Height="750">
                <Viewbox>
                    <matrixcontrols:GenericMatrix x:Name="matrix" MatrixWidth="12" MatrixHeight="7"></matrixcontrols:GenericMatrix>
                </Viewbox>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
