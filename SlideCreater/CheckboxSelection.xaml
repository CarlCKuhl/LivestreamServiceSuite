<Window x:Class="SlideCreater.CheckboxSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlideCreater"
        mc:Ignorable="d"
        Title="CheckboxSelection" Height="400" Width="400">
    <Grid>
        <ListBox x:Name="lbitems" Margin="10,10,10,60" Padding="10">
            <CheckBox>Thing 1</CheckBox>
            <CheckBox>Thing 2</CheckBox>
            <CheckBox>Thing 3</CheckBox>
        </ListBox>
        <Button Click="Click_OK" Margin="10" Width="100" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom">OK</Button>
    </Grid>
</Window>
