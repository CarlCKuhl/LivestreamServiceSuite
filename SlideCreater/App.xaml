<Application x:Class="SlideCreater.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SlideCreater"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DrawingBrush x:Key="BackgroundTileBrush" TileMode="Tile" Viewport="0,0,32,32" ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <GeometryDrawing Geometry="M0,0 H1 V1 H2 V2 H1 V1 H0z" Brush="LightGray"/>
            </DrawingBrush.Drawing>
        </DrawingBrush>

    </Application.Resources>
</Application>
