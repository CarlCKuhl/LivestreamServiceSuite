<UserControl x:Class="SlideCreater.SlideContentPresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SlideCreater"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Border>
                <Grid Height="1080" Width="1920">
                    <Rectangle Fill="LightGray"></Rectangle>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="100" Opacity="0.5">Empty Slide</TextBlock>
                    <Image Name="ImgDisplay"></Image>
                    <MediaElement Name="VideoDisplay"></MediaElement>
                </Grid>
            </Border>
        </Viewbox>
    </Grid>
</UserControl>
